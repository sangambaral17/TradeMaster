<Window x:Class="TradeMaster.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TradeMaster.Desktop"
        mc:Ignorable="d"
        Title="TradeMaster Enterprise" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="#2c3e50" Padding="20">
            <TextBlock Text="TradeMaster Enterprise" Foreground="White" FontSize="24" FontWeight="Bold"/>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <StackPanel>
                <TextBlock Text="System Status" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                <TextBlock x:Name="StatusText" Text="Initializing..." FontSize="16"/>
                
                <TextBlock Text="Inventory Stats" FontSize="18" FontWeight="SemiBold" Margin="0,20,0,10"/>
                <TextBlock x:Name="ProductCountText" Text="Loading..." FontSize="16"/>
            </StackPanel>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#ecf0f1" Padding="10">
            <TextBlock Text="Ready" Foreground="#7f8c8d"/>
        </Border>
    </Grid>
</Window>
