<Window x:Class="TradeMaster.Desktop.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             Title="âš™ï¸ System Settings - TradeMaster"
             Height="750" Width="950"
             WindowStartupLocation="CenterOwner"
             Background="#ecf0f1">
    
    <Window.Resources>
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2c3e50"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
        
        <Style x:Key="SettingLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#34495e"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>
        
        <Style x:Key="SettingCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="10" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#3498db"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980b9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Background="#2c3e50" Padding="25,20">
            <StackPanel>
                <TextBlock Text="âš™ï¸ System Settings" 
                          FontSize="26" 
                          FontWeight="Bold" 
                          Foreground="White"/>
                <TextBlock Text="Configure application preferences and system options" 
                          FontSize="14" 
                          Foreground="#bdc3c7" 
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="25">
            <StackPanel>
                
                <!-- General Settings -->
                <Border Style="{StaticResource SettingCard}">
                    <StackPanel>
                        <TextBlock Text="ðŸ¢ Company Information" Style="{StaticResource SectionHeader}"/>
                        
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Company Name:" Style="{StaticResource SettingLabel}"/>
                            <TextBox Grid.Column="1" Text="{Binding CompanyName, UpdateSourceTrigger=PropertyChanged}" 
                                    Padding="10,8" FontSize="14"/>
                        </Grid>
                        
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Address:" Style="{StaticResource SettingLabel}"/>
                            <TextBox Grid.Column="1" Text="{Binding CompanyAddress, UpdateSourceTrigger=PropertyChanged}" 
                                    Padding="10,8" FontSize="14"/>
                        </Grid>
                        
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Phone:" Style="{StaticResource SettingLabel}"/>
                            <TextBox Grid.Column="1" Text="{Binding CompanyPhone, UpdateSourceTrigger=PropertyChanged}" 
                                    Padding="10,8" FontSize="14"/>
                        </Grid>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Currency Symbol:" Style="{StaticResource SettingLabel}"/>
                            <ComboBox Grid.Column="1" 
                                     ItemsSource="{Binding CurrencyOptions}"
                                     SelectedValue="{Binding CurrencySymbol}"
                                     SelectedValuePath="Symbol"
                                     DisplayMemberPath="Display"
                                     Padding="10,8" FontSize="14"/>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- Language Settings -->
                <Border Style="{StaticResource SettingCard}">
                    <StackPanel>
                        <TextBlock Text="ðŸŒ Language &amp; Localization" Style="{StaticResource SectionHeader}"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="250"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Display Language:" Style="{StaticResource SettingLabel}"/>
                            <ComboBox Grid.Column="1" 
                                     ItemsSource="{Binding Languages}"
                                     SelectedValue="{Binding SelectedLanguage}"
                                     SelectedValuePath="Code"
                                     DisplayMemberPath="DisplayName"
                                     Padding="10,8" FontSize="14"/>
                        </Grid>
                        
                        <TextBlock Text="Note: Language changes will take effect after restart." 
                                  FontSize="12" Foreground="#7f8c8d" Margin="150,8,0,0" FontStyle="Italic"/>
                    </StackPanel>
                </Border>
                
                <!-- Inventory Settings -->
                <Border Style="{StaticResource SettingCard}">
                    <StackPanel>
                        <TextBlock Text="ðŸ“¦ Inventory Alerts" Style="{StaticResource SectionHeader}"/>
                        
                        <CheckBox Content="Show low stock alerts on dashboard" 
                                 IsChecked="{Binding ShowLowStockAlerts}"
                                 FontSize="14" Margin="0,0,0,15"/>
                        
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Low Stock Threshold:" Style="{StaticResource SettingLabel}"/>
                            <TextBox Grid.Column="1" Text="{Binding DefaultLowStockThreshold}" 
                                    Padding="10,8" FontSize="14"/>
                        </Grid>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Default Reorder Quantity:" Style="{StaticResource SettingLabel}"/>
                            <TextBox Grid.Column="1" Text="{Binding DefaultReorderQuantity}" 
                                    Padding="10,8" FontSize="14"/>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- Printing Settings -->
                <Border Style="{StaticResource SettingCard}">
                    <StackPanel>
                        <TextBlock Text="ðŸ–¨ï¸ Receipt Printing" Style="{StaticResource SectionHeader}"/>
                        
                        <CheckBox Content="Show receipt preview before printing" 
                                 IsChecked="{Binding ShowReceiptPreview}"
                                 FontSize="14" Margin="0,0,0,10"/>
                        
                        <CheckBox Content="Automatically print receipt after checkout" 
                                 IsChecked="{Binding AutoPrintReceipt}"
                                 FontSize="14" Margin="0,0,0,15"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Default Printer:" Style="{StaticResource SettingLabel}"/>
                            <TextBox Grid.Column="1" Text="{Binding DefaultPrinterName, UpdateSourceTrigger=PropertyChanged}" 
                                    Padding="10,8" FontSize="14" 
                                    ToolTip="Leave empty to use system default printer"/>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- Backup Settings -->
                <Border Style="{StaticResource SettingCard}">
                    <StackPanel>
                        <TextBlock Text="ðŸ’¾ Backup &amp; Restore" Style="{StaticResource SectionHeader}"/>
                        
                        <CheckBox Content="Enable automatic backups" 
                                 IsChecked="{Binding AutoBackupEnabled}"
                                 FontSize="14" Margin="0,0,0,15"/>
                        
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Backup Interval:" Style="{StaticResource SettingLabel}"/>
                            <TextBox Grid.Column="1" Text="{Binding BackupIntervalHours}" 
                                    Padding="10,8" FontSize="14"/>
                            <TextBlock Grid.Column="2" Text=" hours" Style="{StaticResource SettingLabel}"/>
                        </Grid>
                        
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Backup Location:" Style="{StaticResource SettingLabel}"/>
                            <TextBox Grid.Column="1" Text="{Binding BackupLocation, UpdateSourceTrigger=PropertyChanged}" 
                                    Padding="10,8" FontSize="14" Margin="0,0,10,0"/>
                            <Button Grid.Column="2" Content="Browse..." 
                                   Command="{Binding BrowseBackupLocationCommand}"
                                   Padding="15,8" Background="#95a5a6" Foreground="White" 
                                   BorderThickness="0" Cursor="Hand"/>
                        </Grid>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Keep Backups:" Style="{StaticResource SettingLabel}"/>
                            <TextBox Grid.Column="1" Text="{Binding MaxBackupsToKeep}" 
                                    Padding="10,8" FontSize="14"/>
                        </Grid>
                        
                        <TextBlock Margin="0,15,0,0">
                            <Run Text="Last Backup: " Foreground="#7f8c8d"/>
                            <Run Text="{Binding LastBackupInfo}" FontWeight="SemiBold"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
                
                <!-- Security Settings -->
                <Border Style="{StaticResource SettingCard}">
                    <StackPanel>
                        <TextBlock Text="ðŸ” Security" Style="{StaticResource SectionHeader}"/>
                        
                        <CheckBox Content="Require login on application start" 
                                 IsChecked="{Binding RequireLogin}"
                                 FontSize="14" Margin="0,0,0,15"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Session Timeout:" Style="{StaticResource SettingLabel}"/>
                            <TextBox Grid.Column="1" Text="{Binding SessionTimeoutMinutes}" 
                                    Padding="10,8" FontSize="14"/>
                            <TextBlock Grid.Column="2" Text=" minutes" Style="{StaticResource SettingLabel}"/>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- POS Settings -->
                <Border Style="{StaticResource SettingCard}">
                    <StackPanel>
                        <TextBlock Text="ðŸ’³ Point of Sale" Style="{StaticResource SectionHeader}"/>
                        
                        <CheckBox Content="Enable barcode scanning" 
                                 IsChecked="{Binding EnableBarcodeScanning}"
                                 FontSize="14" Margin="0,0,0,10"/>
                        
                        <CheckBox Content="Play sound on successful scan" 
                                 IsChecked="{Binding PlaySoundOnScan}"
                                 FontSize="14"/>
                    </StackPanel>
                </Border>
                
                <!-- About Section -->
                <Border Style="{StaticResource SettingCard}">
                    <StackPanel>
                        <TextBlock Text="â„¹ï¸ About" Style="{StaticResource SectionHeader}"/>
                        
                        <TextBlock Text="Walsong TradeMaster Enterprise" FontSize="16" FontWeight="SemiBold" Foreground="#2c3e50"/>
                        <TextBlock Text="Version 1.0.0 (Nepal Edition)" FontSize="14" Foreground="#7f8c8d" Margin="0,5,0,0"/>
                        <TextBlock Text="Â© 2025 Walsong Nepal. All rights reserved." FontSize="12" Foreground="#95a5a6" Margin="0,10,0,0"/>
                        <TextBlock Text="Developed by Sangam Baral" FontSize="12" Foreground="#95a5a6" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
                
            </StackPanel>
        </ScrollViewer>
        
        <!-- Footer Actions -->
        <Border Grid.Row="2" Background="White" Padding="25,15" 
                BorderBrush="#e0e0e0" BorderThickness="0,1,0,0">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Content="ðŸ”„ Reset to Defaults" 
                           Command="{Binding ResetToDefaultsCommand}"
                           Background="#e74c3c" Style="{StaticResource ActionButton}"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="{Binding StatusMessage}" 
                              VerticalAlignment="Center" 
                              Foreground="#27ae60" 
                              FontWeight="SemiBold"
                              Margin="0,0,20,0"/>
                    <Button Content="ðŸ’¾ Save Settings" 
                           Command="{Binding SaveSettingsCommand}"
                           Background="#27ae60" Style="{StaticResource ActionButton}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
