<Window x:Class="TradeMaster.Desktop.Views.CategoryManagementDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ðŸ“‚ Category Management" Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#f5f6fa">

    <Window.Resources>
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498db"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980b9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DeleteButton" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#e74c3c"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#c0392b"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2c3e50" Padding="20,15">
            <TextBlock Text="ðŸ“‚ Manage Categories" Style="{StaticResource HeaderStyle}"/>
        </Border>

        <!-- Category List -->
        <Border Grid.Row="1" Background="White" Margin="15,15,15,0" CornerRadius="8" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Existing Categories" FontSize="16" FontWeight="SemiBold" 
                          Foreground="#2c3e50" Margin="0,0,0,10"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ListBox x:Name="CategoriesListBox" 
                            BorderThickness="0"
                            Background="Transparent">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#ecf0f1" Margin="0,0,0,8" 
                                       CornerRadius="5" Padding="12">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Name}" FontSize="14" 
                                                      FontWeight="SemiBold" Foreground="#2c3e50"/>
                                            <TextBlock Text="{Binding Description}" FontSize="12" 
                                                      Foreground="#7f8c8d" Margin="0,2,0,0" 
                                                      TextWrapping="Wrap"/>
                                        </StackPanel>

                                        <Button Grid.Column="1" Content="âœï¸ Edit" 
                                               Style="{StaticResource ButtonStyle}"
                                               Margin="0,0,8,0"
                                               Padding="12,6"
                                               Click="EditCategory_Click"
                                               Tag="{Binding}"/>
                                        <Button Grid.Column="2" Content="ðŸ—‘ï¸ Delete" 
                                               Style="{StaticResource DeleteButton}"
                                               Padding="12,6"
                                               Click="DeleteCategory_Click"
                                               Tag="{Binding}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Add New Category Form -->
        <Border Grid.Row="2" Background="White" Margin="15,15,15,15" 
               CornerRadius="8" Padding="15">
            <StackPanel>
                <TextBlock Text="âž• Add New Category" FontSize="16" 
                          FontWeight="SemiBold" Foreground="#2c3e50" Margin="0,0,0,12"/>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Category Name *" FontSize="13" 
                                  Foreground="#34495e" Margin="0,0,0,5"/>
                        <TextBox x:Name="CategoryNameTextBox" 
                                Padding="10,8" FontSize="13"/>
                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,10,0">
                        <TextBlock Text="Description" FontSize="13" 
                                  Foreground="#34495e" Margin="0,0,0,5"/>
                        <TextBox x:Name="CategoryDescriptionTextBox" 
                                Padding="10,8" FontSize="13"/>
                    </StackPanel>

                    <Button Grid.Row="0" Grid.Column="2" Content="âž• Add Category" 
                           Style="{StaticResource ButtonStyle}"
                           VerticalAlignment="Bottom"
                           Click="AddCategory_Click"/>
                </Grid>

                <!-- Validation Message -->
                <Border x:Name="ValidationBorder" 
                       Background="#ffe5e5" 
                       BorderBrush="#e74c3c" 
                       BorderThickness="1"
                       CornerRadius="5"
                       Padding="10"
                       Margin="0,10,0,0"
                       Visibility="Collapsed">
                    <TextBlock x:Name="ValidationText" 
                              Foreground="#c0392b" 
                              FontSize="12"
                              TextWrapping="Wrap"/>
                </Border>
            </StackPanel>
        </Border>

        <!-- Footer -->
        <Border Grid.Row="3" Background="White" BorderBrush="#ecf0f1" 
               BorderThickness="0,1,0,0" Padding="15">
            <Button Content="âœ”ï¸ Close" 
                   Style="{StaticResource ButtonStyle}"
                   HorizontalAlignment="Right"
                   MinWidth="120"
                   Click="Close_Click"/>
        </Border>
    </Grid>
</Window>
