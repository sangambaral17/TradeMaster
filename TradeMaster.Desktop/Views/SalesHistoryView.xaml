<Window x:Class="TradeMaster.Desktop.Views.SalesHistoryView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:TradeMaster.Desktop.Converters"
        mc:Ignorable="d"
        Title="Sales History" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#ecf0f1">

    <Window.Resources>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2c3e50"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="ðŸ“ˆ Sales History" Style="{StaticResource HeaderText}"/>

        <!-- Filters -->
        <Border Grid.Row="1" Background="White" CornerRadius="5" Padding="15" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="From:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold"/>
                <DatePicker SelectedDate="{Binding StartDate}" Width="150" Margin="0,0,20,0"/>

                <TextBlock Text="To:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold"/>
                <DatePicker SelectedDate="{Binding EndDate}" Width="150" Margin="0,0,20,0"/>

                <Button Content="ðŸ”„ Refresh" 
                        Command="{Binding LoadSalesCommand}"
                        Background="#3498db" 
                        Foreground="White" 
                        Padding="15,5" 
                        BorderThickness="0" 
                        FontWeight="SemiBold"
                        Cursor="Hand"/>
            </StackPanel>
        </Border>

        <!-- Sales List -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <!-- Transactions Table -->
            <Border Grid.Column="0" Background="White" CornerRadius="10" Padding="0" Margin="0,0,20,0">
                <DataGrid ItemsSource="{Binding FilteredSales}"
                          SelectedItem="{Binding SelectedSale}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          Background="White"
                          BorderThickness="0"
                          RowHeight="40">
                    
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="Date" Binding="{Binding SaleDate, StringFormat=g}" Width="150"/>
                        <DataGridTextColumn Header="Customer" Binding="{Binding Customer.Name, TargetNullValue='Walk-in'}" Width="*"/>
                        <DataGridTextColumn Header="Total" Binding="{Binding TotalAmount, StringFormat=C2}" Width="100" FontWeight="Bold"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- Sale Details (Side Panel) -->
            <Border Grid.Column="1" Background="White" CornerRadius="10" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Transaction Details" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                    <ScrollViewer Grid.Row="1">
                        <StackPanel>
                            <TextBlock Text="Select a transaction to view details" 
                                       Foreground="#95a5a6" 
                                       FontStyle="Italic"
                                       Visibility="{Binding SelectedSale, Converter={StaticResource NullToVisibilityConverter}, FallbackValue=Visible}"/>

                            <StackPanel Visibility="{Binding SelectedSale, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}">
                                <TextBlock Text="{Binding SelectedSale.SaleDate, StringFormat='Date: {0:D}'}" Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding SelectedSale.Id, StringFormat='Receipt #: {0}'}" Margin="0,0,0,15" Foreground="#7f8c8d"/>

                                <TextBlock Text="Items:" FontWeight="Bold" Margin="0,0,0,10"/>
                                
                                <ItemsControl ItemsSource="{Binding SelectedSale.Items}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,0,0,10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding Product.Name}" FontWeight="SemiBold"/>
                                                    <TextBlock Text="{Binding Quantity, StringFormat='Qty: {0}'}" FontSize="12" Foreground="#7f8c8d"/>
                                                </StackPanel>
                                                <TextBlock Grid.Column="1" Text="{Binding TotalPrice, StringFormat=C2}" VerticalAlignment="Center"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

                    <Border Grid.Row="2" BorderBrush="#bdc3c7" BorderThickness="0,1,0,0" Padding="0,15,0,0" Margin="0,10,0,0">
                        <Grid>
                            <TextBlock Text="Total Amount" FontSize="16" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding SelectedSale.TotalAmount, StringFormat=C2}" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       Foreground="#27ae60" 
                                       HorizontalAlignment="Right"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Footer Summary -->
        <Border Grid.Row="3" Background="#2c3e50" CornerRadius="5" Padding="20" Margin="0,20,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Total Revenue (Selected Period):" Foreground="White" FontSize="16" Margin="0,0,15,0" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding TotalRevenue, StringFormat=C2}" Foreground="#2ecc71" FontSize="24" FontWeight="Bold"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
