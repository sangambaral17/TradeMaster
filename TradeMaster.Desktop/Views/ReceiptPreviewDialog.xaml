<Window x:Class="TradeMaster.Desktop.Views.ReceiptPreviewDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ðŸ§¾ Receipt Preview" 
        Height="600" Width="400"
        WindowStartupLocation="CenterOwner"
        Background="#f5f5f5">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Background="#2c3e50" Padding="20,15">
            <TextBlock Text="ðŸ§¾ Receipt Preview" 
                      FontSize="18" 
                      FontWeight="Bold" 
                      Foreground="White"/>
        </Border>
        
        <!-- Receipt Content -->
        <Border Grid.Row="1" 
               Background="White" 
               Margin="20" 
               Padding="20"
               BorderBrush="#ddd"
               BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="#000" Opacity="0.1" BlurRadius="10" ShadowDepth="2"/>
            </Border.Effect>
            
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="ReceiptTextBlock"
                          FontFamily="Consolas"
                          FontSize="12"
                          TextWrapping="NoWrap"
                          Foreground="#333"/>
            </ScrollViewer>
        </Border>
        
        <!-- Actions -->
        <Border Grid.Row="2" Background="White" Padding="20" BorderBrush="#e0e0e0" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="PrintButton"
                       Content="ðŸ–¨ï¸ Print Receipt"
                       Padding="20,12"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Background="#27ae60"
                       Foreground="White"
                       BorderThickness="0"
                       Cursor="Hand"
                       Margin="0,0,10,0"
                       Click="PrintButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                   CornerRadius="6" 
                                   Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                
                <Button x:Name="CloseButton"
                       Content="Close"
                       Padding="20,12"
                       FontSize="14"
                       Background="#95a5a6"
                       Foreground="White"
                       BorderThickness="0"
                       Cursor="Hand"
                       Click="CloseButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                   CornerRadius="6" 
                                   Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
