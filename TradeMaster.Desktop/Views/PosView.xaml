<Window x:Class="TradeMaster.Desktop.Views.PosView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Point of Sale" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#f5f6fa">

    <Window.Resources>
        <!-- Product Card Style -->
        <Style x:Key="ProductCard" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="5" ShadowDepth="1"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#ecf0f1"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/> <!-- Product Catalog -->
            <ColumnDefinition Width="400"/> <!-- Cart -->
        </Grid.ColumnDefinitions>

        <!-- Left Side: Product Catalog -->
        <Grid Grid.Column="0" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Search Bar -->
            <Border Grid.Row="0" Background="White" CornerRadius="8" Padding="5" Margin="0,0,0,20">
                <TextBox Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                         FontSize="16"
                         Padding="10"
                         BorderThickness="0"
                         VerticalContentAlignment="Center"/>
            </Border>

            <!-- Product Grid -->
            <ScrollViewer Grid.Row="1">
                <ItemsControl ItemsSource="{Binding FilteredProducts}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource ProductCard}" 
                                    Width="180" Height="120"
                                    Command="{Binding DataContext.AddToCartCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}">
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" 
                                               FontWeight="Bold" 
                                               FontSize="14" 
                                               TextWrapping="Wrap" 
                                               TextAlignment="Center"
                                               Foreground="#2c3e50"/>
                                    <TextBlock Text="{Binding Price, StringFormat=C2}" 
                                               FontSize="16" 
                                               FontWeight="SemiBold" 
                                               Foreground="#27ae60"
                                               TextAlignment="Center"
                                               Margin="0,5,0,0"/>
                                    <TextBlock Text="{Binding StockQuantity, StringFormat='Stock: {0}'}" 
                                               FontSize="12" 
                                               Foreground="#7f8c8d"
                                               TextAlignment="Center"
                                               Margin="0,5,0,0"/>
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <!-- Right Side: Cart -->
        <Border Grid.Column="1" Background="White" BorderBrush="#ecf0f1" BorderThickness="1,0,0,0">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Cart Header -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock Text="ðŸ›’ Current Order" FontSize="22" FontWeight="Bold" Foreground="#2c3e50"/>
                    <Button Content="Clear" 
                            Command="{Binding ClearCartCommand}"
                            HorizontalAlignment="Right"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="#e74c3c"
                            Cursor="Hand"/>
                </Grid>

                <!-- Cart Items -->
                <DataGrid Grid.Row="1" 
                          ItemsSource="{Binding CartItems}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          Background="White"
                          BorderThickness="0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Item" Binding="{Binding Product.Name}" Width="*"/>
                        <DataGridTextColumn Header="Qty" Binding="{Binding Quantity}" Width="50"/>
                        <DataGridTextColumn Header="Total" Binding="{Binding TotalPrice, StringFormat=C2}" Width="80"/>
                        <DataGridTemplateColumn Width="40">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="âŒ" 
                                            Command="{Binding DataContext.RemoveFromCartCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Cursor="Hand"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Totals & Checkout -->
                <StackPanel Grid.Row="2" Margin="0,20,0,0">
                    <Grid Margin="0,0,0,10">
                        <TextBlock Text="Subtotal" Foreground="#7f8c8d"/>
                        <TextBlock Text="{Binding SubTotal, StringFormat=C2}" HorizontalAlignment="Right" FontWeight="SemiBold"/>
                    </Grid>
                    <Grid Margin="0,0,0,10">
                        <TextBlock Text="Tax (0%)" Foreground="#7f8c8d"/>
                        <TextBlock Text="{Binding TaxAmount, StringFormat=C2}" HorizontalAlignment="Right" FontWeight="SemiBold"/>
                    </Grid>
                    <Separator Background="#ecf0f1" Margin="0,10"/>
                    <Grid Margin="0,0,0,20">
                        <TextBlock Text="Total" FontSize="20" FontWeight="Bold" Foreground="#2c3e50"/>
                        <TextBlock Text="{Binding TotalAmount, StringFormat=C2}" FontSize="20" FontWeight="Bold" Foreground="#27ae60" HorizontalAlignment="Right"/>
                    </Grid>

                    <Button Content="CHECKOUT" 
                            Command="{Binding CheckoutCommand}"
                            Background="#27ae60"
                            Foreground="White"
                            FontSize="18"
                            FontWeight="Bold"
                            Padding="15"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
