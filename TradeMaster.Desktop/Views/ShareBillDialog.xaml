<Window x:Class="TradeMaster.Desktop.Views.ShareBillDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ðŸ“¤ Share Bill" Height="550" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#f5f6fa">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#3498db" Padding="20">
            <TextBlock Text="ðŸ“¤ Share Bill with Customer" 
                       Foreground="White" 
                       FontSize="20" 
                       FontWeight="Bold"/>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" Margin="20">
            <StackPanel>
                <!-- Customer Contact -->
                <TextBlock Text="Customer Phone/Email:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <TextBox x:Name="ContactTextBox" 
                         Padding="12,10"
                         FontSize="14"
                         BorderBrush="#bdc3c7"
                         BorderThickness="1"
                         Margin="0,0,0,20"/>

                <!-- Share Options -->
                <TextBlock Text="Share via:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>
                
                <WrapPanel>
                    <Button Content="ðŸ“± WhatsApp" 
                            Click="ShareWhatsApp_Click"
                            Background="#25D366"
                            Foreground="White"
                            Padding="15,10"
                            Margin="0,0,10,10"
                            BorderThickness="0"
                            Cursor="Hand"
                            FontWeight="SemiBold"/>
                    
                    <Button Content="ðŸ’¬ Viber" 
                            Click="ShareViber_Click"
                            Background="#7360F2"
                            Foreground="White"
                            Padding="15,10"
                            Margin="0,0,10,10"
                            BorderThickness="0"
                            Cursor="Hand"
                            FontWeight="SemiBold"/>
                    
                    <Button Content="âœˆï¸ Telegram" 
                            Click="ShareTelegram_Click"
                            Background="#0088cc"
                            Foreground="White"
                            Padding="15,10"
                            Margin="0,0,10,10"
                            BorderThickness="0"
                            Cursor="Hand"
                            FontWeight="SemiBold"/>
                    
                    <Button Content="ðŸ“§ Email" 
                            Click="ShareEmail_Click"
                            Background="#EA4335"
                            Foreground="White"
                            Padding="15,10"
                            Margin="0,0,10,10"
                            BorderThickness="0"
                            Cursor="Hand"
                            FontWeight="SemiBold"/>
                    
                    <Button Content="ðŸ’¬ SMS" 
                            Click="ShareSMS_Click"
                            Background="#34B7F1"
                            Foreground="White"
                            Padding="15,10"
                            Margin="0,0,10,10"
                            BorderThickness="0"
                            Cursor="Hand"
                            FontWeight="SemiBold"/>
                </WrapPanel>

                <!-- Bill Preview -->
                <TextBlock Text="Bill Preview:" FontSize="14" FontWeight="SemiBold" Margin="0,20,0,10"/>
                <Border Background="White" BorderBrush="#bdc3c7" BorderThickness="1" CornerRadius="5" Padding="15">
                    <TextBlock x:Name="BillPreviewText" 
                               FontFamily="Consolas"
                               FontSize="11"
                               TextWrapping="Wrap"
                               Foreground="#2c3e50"/>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="White" BorderBrush="#ecf0f1" BorderThickness="0,1,0,0" Padding="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="ðŸ“‹ Copy to Clipboard" 
                        Click="CopyToClipboard_Click"
                        Background="#95a5a6"
                        Foreground="White"
                        Padding="15,10"
                        Margin="0,0,10,0"
                        BorderThickness="0"
                        Cursor="Hand"
                        FontWeight="SemiBold"/>
                
                <Button Content="Close" 
                        Click="Close_Click"
                        Background="#7f8c8d"
                        Foreground="White"
                        Padding="15,10"
                        BorderThickness="0"
                        Cursor="Hand"
                        FontWeight="SemiBold"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
