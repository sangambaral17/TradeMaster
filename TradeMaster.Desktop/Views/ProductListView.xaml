<Window x:Class="TradeMaster.Desktop.Views.ProductListView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:TradeMaster.Desktop.Converters"
        mc:Ignorable="d"
        Title="Product Management" Height="650" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#f5f6fa">
    
    <Window.Resources>
        <!-- Converters -->
        <converters:BoolToVisibilityConverter x:Key="BoolToVisConverter"/>
        <converters:NullToBoolConverter x:Key="NullToBoolConverter"/>
        <converters:LowStockConverter x:Key="LowStockConverter"/>
        <converters:EmptyStringToVisibilityConverter x:Key="EmptyStringToVisibilityConverter"/>
        <converters:PageGreaterThan1Converter x:Key="PageGreaterThan1Converter"/>
        <converters:ColumnHeaderConverter x:Key="ColumnHeaderConverter"/>
        
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#3498db"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980b9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Success Button -->
        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#27ae60"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#229954"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Danger Button -->
        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#e74c3c"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#c0392b"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataGrid Style -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="AlternatingRowBackground" Value="#f8f9fa"/>
            <Setter Property="RowHeight" Value="45"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#34495e"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#ecf0f1"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#d5dbdb"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2c3e50" Padding="25,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="ðŸ“¦ Product Management" 
                               Foreground="White" 
                               FontSize="28" 
                               FontWeight="Bold"/>
                    <TextBlock Text="Manage your inventory products" 
                               Foreground="#bdc3c7" 
                               FontSize="14" 
                               Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="{Binding TotalProducts, StringFormat='Total: {0} products'}" 
                               Foreground="White" 
                               FontSize="16" 
                               VerticalAlignment="Center"
                               Margin="0,0,20,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Toolbar -->
        <Border Grid.Row="1" Background="White" Padding="25,15" BorderBrush="#ecf0f1" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search Box -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBox x:Name="SearchBox" 
                             Width="350"
                             Padding="12,10"
                             FontSize="14"
                             BorderBrush="#bdc3c7"
                             BorderThickness="1"
                             VerticalContentAlignment="Center"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBlock Text="ðŸ”" 
                               FontSize="16" 
                               Foreground="#7f8c8d"
                               VerticalAlignment="Center"
                               Margin="-30,0,0,0"
                               IsHitTestVisible="False"
                               Visibility="{Binding SearchText, Converter={StaticResource EmptyStringToVisibilityConverter}}"/>
                    <Button Content="âœ–" 
                            Style="{StaticResource ModernButton}"
                            Command="{Binding ClearSearchCommand}"
                            Padding="10,8"
                            Margin="10,0,0,0"
                            ToolTip="Clear search"/>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="âž• Add Product" 
                            Style="{StaticResource SuccessButton}"
                            Command="{Binding AddProductCommand}"
                            Margin="0,0,10,0"/>
                    <Button Content="âœï¸ Edit" 
                            Style="{StaticResource ModernButton}"
                            Command="{Binding EditProductCommand}"
                            IsEnabled="{Binding SelectedProduct, Converter={StaticResource NullToBoolConverter}}"
                            Margin="0,0,10,0"/>
                    <Button Content="ðŸ—‘ï¸ Delete" 
                            Style="{StaticResource DangerButton}"
                            Command="{Binding DeleteProductCommand}"
                            IsEnabled="{Binding SelectedProduct, Converter={StaticResource NullToBoolConverter}}"/>
                    <Button Content="ðŸ”„ Refresh" 
                            Style="{StaticResource ModernButton}"
                            Command="{Binding LoadProductsCommand}"
                            Margin="10,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Product List -->
        <Border Grid.Row="2" Margin="25" Background="White" CornerRadius="8" BorderBrush="#ecf0f1" BorderThickness="1">
            <Grid>
                <!-- Loading Overlay -->
                <Border Background="#80000000" Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisConverter}}">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="â³ Loading products..." 
                                   Foreground="White" 
                                   FontSize="18" 
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- DataGrid -->
                <DataGrid ItemsSource="{Binding Products}"
                          SelectedItem="{Binding SelectedProduct, Mode=TwoWay}"
                          Margin="0"
                          CanUserSortColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="80" CanUserSort="False"/>
                        <DataGridTextColumn Header="SKU" Binding="{Binding Sku}" Width="120" CanUserSort="False"/>
                        
                        <!-- Sortable Product Name Column -->
                        <DataGridTemplateColumn Width="*" MinWidth="200" CanUserSort="False">
                            <DataGridTemplateColumn.Header>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Product Name â–¼"
                                            Command="{Binding DataContext.SortByCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="Name"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Foreground="White"
                                            FontWeight="Bold"
                                            FontSize="14"
                                            Cursor="Hand"
                                            Padding="15,10"
                                            ToolTip="Click to sort by Product Name"/>
                                </StackPanel>
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}" Padding="15,0" VerticalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <DataGridTextColumn Header="Category" Binding="{Binding Category.Name}" Width="150" CanUserSort="False"/>
                        
                        <!-- Sortable Price Column -->
                        <DataGridTemplateColumn Width="120" CanUserSort="False">
                            <DataGridTemplateColumn.Header>
                                <Button Content="Price â–¼"
                                        Command="{Binding DataContext.SortByCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="Price"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Foreground="White"
                                        FontWeight="Bold"
                                        FontSize="14"
                                        Cursor="Hand"
                                        Padding="15,10"
                                        ToolTip="Click to sort by Price"/>
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Price, StringFormat=C2}" Padding="15,0" VerticalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <!-- Sortable Stock Quantity Column -->
                        <DataGridTemplateColumn Width="100" CanUserSort="False">
                            <DataGridTemplateColumn.Header>
                                <Button Content="Stock â–¼"
                                        Command="{Binding DataContext.SortByCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="StockQuantity"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Foreground="White"
                                        FontWeight="Bold"
                                        FontSize="14"
                                        Cursor="Hand"
                                        Padding="15,10"
                                        ToolTip="Click to sort by Stock Quantity"/>
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding StockQuantity}" Padding="15,0" VerticalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Status" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="12" Padding="8,4" HorizontalAlignment="Center">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#27ae60"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding StockQuantity, Converter={StaticResource LowStockConverter}}" Value="True">
                                                        <Setter Property="Background" Value="#e74c3c"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Foreground="White" FontWeight="SemiBold" FontSize="11">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="In Stock"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding StockQuantity, Converter={StaticResource LowStockConverter}}" Value="True">
                                                            <Setter Property="Text" Value="Low Stock"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Footer with Pagination -->
        <Border Grid.Row="3" Background="#ecf0f1" Padding="25,12">
            <Grid>
                <TextBlock Text="ðŸ’¡ Tip: Double-click a row to edit" 
                           Foreground="#7f8c8d" 
                           FontSize="13"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"/>
                
                <!-- Pagination Controls -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="â—€ Previous" 
                            Style="{StaticResource ModernButton}"
                            Command="{Binding PreviousPageCommand}"
                            Padding="10,5"
                            Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding CurrentPage, StringFormat='Page {0}'}" 
                               Foreground="#2c3e50" 
                               FontSize="14"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding TotalPages, StringFormat='of {0}'}" 
                               Foreground="#7f8c8d" 
                               FontSize="14"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    <Button Content="Next â–¶" 
                            Style="{StaticResource ModernButton}"
                            Command="{Binding NextPageCommand}"
                            Padding="10,5"/>
                </StackPanel>
                
                <TextBlock Text="{Binding Products.Count, StringFormat='Showing {0} items'}" 
                           Foreground="#7f8c8d" 
                           FontSize="13"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
