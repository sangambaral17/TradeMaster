<Window x:Class="TradeMaster.Desktop.Views.CustomerEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Customer Details" Height="500" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#ecf0f1"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style x:Key="FormLabel" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#2c3e50"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="FormTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#bdc3c7"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   x:Name="HeaderText"
                   Text="Add New Customer" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Foreground="#2c3e50"
                   Margin="0,0,0,20"/>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Name -->
                <TextBlock Text="Name *" Style="{StaticResource FormLabel}"/>
                <TextBox x:Name="NameTextBox" Style="{StaticResource FormTextBox}"/>

                <!-- Email -->
                <TextBlock Text="Email" Style="{StaticResource FormLabel}"/>
                <TextBox x:Name="EmailTextBox" Style="{StaticResource FormTextBox}"/>

                <!-- Phone -->
                <TextBlock Text="Phone" Style="{StaticResource FormLabel}"/>
                <TextBox x:Name="PhoneTextBox" Style="{StaticResource FormTextBox}"/>

                <!-- Address -->
                <TextBlock Text="Address" Style="{StaticResource FormLabel}"/>
                <TextBox x:Name="AddressTextBox" 
                         Style="{StaticResource FormTextBox}"
                         Height="80"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1"
                    Content="ðŸ’¾ Save Customer"
                    Background="#27ae60"
                    Foreground="White"
                    Padding="20,10"
                    Margin="5"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="SaveButton_Click"/>

            <Button Grid.Column="2"
                    Content="Cancel"
                    Background="#95a5a6"
                    Foreground="White"
                    Padding="20,10"
                    Margin="5"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="CancelButton_Click"/>
        </Grid>
    </Grid>
</Window>
